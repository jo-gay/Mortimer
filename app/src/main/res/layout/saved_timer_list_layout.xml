<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textViewSavedTimerDuration"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/placeholder"
        android:textColor="@color/colorStdText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewSavedTimerNotification"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="2dp"
        android:text="@string/placeholder"
        android:textColor="@color/colorStdText"
        android:textSize="12sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSavedTimerDuration"
        />

    <ImageButton
        android:id="@+id/textViewSavedTimerDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewSavedTimerDuration"
        app:layout_constraintBottom_toBottomOf="@+id/textViewSavedTimerNotification"
        app:srcCompat="@android:drawable/ic_menu_delete" />

</androidx.constraintlayout.widget.ConstraintLayout>
